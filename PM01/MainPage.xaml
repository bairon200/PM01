<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM01.MainPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout BackgroundColor="#FEE6B9">
        <Label Text="Conversor"
               HorizontalTextAlignment="Center"
               FontSize="40"
               FontAttributes="Bold"
               Margin="0,20,0,0"
               HorizontalOptions="Center" />
        <Frame VerticalOptions="FillAndExpand"
               Margin="20,10,20,10"
               CornerRadius="20"
               HasShadow="False">
            <StackLayout VerticalOptions="Center"
                         Spacing="10">
                <Image Source=" https://cdn-icons-png.flaticon.com/512/5617/5617525.png " />
                <Label Text="(CM) a (M)"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <Button Text="Iniciar"
                        TextTransform="None"
                        BackgroundColor="#FDE080"
                        CornerRadius="10" 
                        x:Name="btniniciar"
                        Clicked="btniniciar_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
